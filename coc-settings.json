{
  "suggest.noselect": false,
  "coc.preferences.formatOnSaveFiletypes": [
  ],
   // python config
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "json.schemas": [
    {
      "fileMatch": [
        "/config/*/config.json",
        "/config/*/config.json",
      ],
      "url": "/config/config.schema.json"
    },
    {
      "fileMatch": [
        "/config/*/secrets.json",
        "/config/*/secrets.ejson",
      ],
      "url": "/config/secrets.schema.json"
    },
    {
      "fileMatch": [
        "/db/seeds/config_schemas/**/config.schema.json"
      ],
      "url": "/db/seeds/config_schemas/meta.schema.json"
    }
  ]
}
